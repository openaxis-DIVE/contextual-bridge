{
  "manifest_version": 3,
  "name": "Kagi Saver",
  "version": "1.0",
  "description": "Save clipboard content from Kagi to local filesystem",
  "permissions": [
    "storage",
    "clipboardRead",
    "offscreen"
  ],
  "content_scripts": [
    {
      "matches": ["https://kagi.com/*"],
      "js": ["bannerManager.js", "fileMarkerParser.js", "content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
